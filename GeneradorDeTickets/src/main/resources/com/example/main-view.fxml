<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controlador.ChooseController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <top>
        <Label text="Genere su ticket" BorderPane.alignment="CENTER">
            <font>
                <Font name="Arial Bold" size="24.0" />
            </font>
        </Label>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20.0">
            <Button fx:id="btnCaja" mnemonicParsing="false" text="Caja" style="-fx-font-size: 18px;" />
            <Button fx:id="btnServicio" mnemonicParsing="false" text="Servicio Cliente" style="-fx-font-size: 18px;" />
        </VBox>
    </center>
</BorderPane>